
@model JuliePro_Models.ViewModels.ScheduledSessionVM;



<div class="p-3 DivBgForm">
    <form class="form-horizontal" method="post" enctype="multipart/form-data">
        <div class="row p-3 ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 border-bottom container rounded p-2">
                <input type="hidden" asp-for="ScheduledSession.Id" />
                <input type="hidden" asp-for="ScheduledSession.Customer_Id" value="@Model.CustomerId" />

            </div>

            <h1>Create a schedulesession</h1>
            <div class="col-7 pt-2">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ScheduledSession.Complete"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ScheduledSession.Complete" class="form-control" />
                        <span asp-validation-for="ScheduledSession.Complete" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ScheduledSession.Date"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ScheduledSession.Date" class="form-control" />
                        <span asp-validation-for="ScheduledSession.Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ScheduledSession.DurationMin"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ScheduledSession.DurationMin" class="form-control" />
                        <span asp-validation-for="ScheduledSession.DurationMin" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ScheduledSession.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="ScheduledSession.Description" class="form-control summernote" /></textarea>
                        <span asp-validation-for="ScheduledSession.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2">
                        @*BUTTONS*@
                        @*<partial name="_CreateBack" />*@

                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model"><i class="fas fa-plus"></i> Create </button>
                        </div>
                        <div class="col">
                            <a asp-controller="Customer" asp-action="CustomerTracking" class="btn btn-success form-control"><i class="fas fa-arrow-left"></i> Back to List </a>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('.summernote').summernote();

        });</script>

}

