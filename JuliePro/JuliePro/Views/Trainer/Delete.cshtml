@model JuliePro_Models.Models.Trainer
@{ Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Delete a Trainer"; }
@using JuliePro.Utility;

<div class="p-3 DivBgForm">
    <form class="form-horizontal" method="post" enctype="multipart/form-data">
        <div class="row p-3 ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 border-bottom container rounded p-2">
                <input type="hidden" asp-for="Id" />
                @if (Model.Id > 0)
                {
                    //Edit
                    title = "Delete a Trainer";
                }
                <h2 class="text-primary">@title</h2>
            </div>

            <div class="col-7 pt-2">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Biography"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Biography" class="form-control" />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2">
                        @*BUTTONS*@

                        @{<partial name="_DeleteBack" model="Model.Id" /> }
                    </div>
                </div>
            </div>

            <div class="col-5 border pt-2">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Photo"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Photo" class="form-control" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 pt-2">
                    <div class="form-group row pt-1">

                        <img src="@AppContants.ImagePathView@Model.Photo" height="450px" width="450px" alt="Picture of the trainer" />

                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
