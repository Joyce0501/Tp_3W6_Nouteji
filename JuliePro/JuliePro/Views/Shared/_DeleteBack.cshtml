@inject IViewLocalizer Localizer
<div class="row">
    <div class="col">
        <button asp-action="DeletePost" class="btn btn-danger form-control" asp-route-id="@Model"><i class="fas fa-trash-alt"></i>@Locals["Delete"]</button>
    </div>
    <div class="col">
        <a asp-action="Index" class="btn btn-success form-control"><i class="fas fa-arrow-left"></i>@Locals["BackToList"]</a>
    </div>
</div>